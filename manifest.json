{
  "manifest_version": 3,
  "name": "Facebook Group Finder",
  "version": "1.0",
  "description": "Find Facebook groups without an admin",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.facebook.com/*"],
  "background": {
    "service_worker": "script.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
